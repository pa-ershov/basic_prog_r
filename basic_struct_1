# FUNCTIONS

# Глобальное присваивание переменной (функции со сторонним эффектом - side effect)

addten <- function(x) {
  moredogs <<- x + 10
}

dogs <- 2
addten(dogs)
moredogs

# Удаление переменных из окружения

rm(dogs)
ls() # просмотр переменных

rm(list = ls()) #удаление всех переменных


#Напишите функцию, которая принимает на вход два числа и возвращает результат деления 
#первого на второе.

divide <- function(x, y) {
  return(x / y)
}

